<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Kind</key>
    <string>Xcode.Xcode3.ProjectTemplateUnitKind</string>
    <key>Identifier</key>
    <string>com.carbon.carbonApplication</string>
    <key>Concrete</key>
    <true/>
    <key>Description</key>
    <string>This template creates a Carbon application with support for Mac OS X and iOS.</string>
    <key>SortOrder</key>
    <integer>1</integer>

    <key>Ancestors</key>
    <array>
        <string>com.apple.dt.unit.base</string>
    </array>

    <key>Platforms</key>
    <array>
        <string>com.apple.platform.macosx</string>
        <string>com.apple.platform.iphoneos</string>
    </array>

    <key>Targets</key>
    <array>
        <!-- Mac OS X target -->
        <dict>
            <key>Name</key>
            <string>___PACKAGENAME___</string>

            <key>ProductType</key>
            <string>com.apple.product-type.application</string>

            <key>SharedSettings</key>
            <dict>
                <key>SDKROOT</key>
                <string>macosx</string>
                <key>VALID_ARCHS</key>
                <string>x86_64</string>
                <key>MACOSX_DEPLOYMENT_TARGET</key>
                <string>10.9</string>
                <key>CLANG_CXX_LANGUAGE_STANDARD</key>
                <string>c++0x</string>
                <key>CLANG_CXX_LIBRARY</key>
                <string>libc++</string>
                <key>CLANG_ENABLE_OBJC_ARC</key>
                <string>YES</string>
                <key>PRODUCT_NAME</key>
                <string>___PACKAGENAME___</string>
                <key>INFOPLIST_FILE</key>
                <string>___PACKAGENAME___/Info.plist</string>
                <key>PRODUCT_BUNDLE_IDENTIFIER</key>
                <string>___VARIABLE_bundleIdentifierPrefix:bundleIdentifier___.___PACKAGENAMEASRFC1034IDENTIFIER___</string>
                <key>GCC_PREPROCESSOR_DEFINITIONS</key>
                <array>
                    <string>$(inherited)</string>
                    <string>CARBON_STATIC_LIBRARY</string>
                </array>

                <!-- Add search paths so the CarbonEngine headers and libraries can be found -->
                <key>HEADER_SEARCH_PATHS</key>
                <string>/Applications/Carbon\ SDK/Include</string>
                <key>LIBRARY_SEARCH_PATHS</key>
                <string>/Applications/Carbon\ SDK/Library</string>
            </dict>

            <key>Frameworks</key>
            <array>
                <string>Cocoa</string>
                <string>GameKit</string>
                <string>IOKit</string>
                <string>OpenAL</string>
                <string>OpenGL</string>
                <string>StoreKit</string>
            </array>

            <key>Configurations</key>
            <dict>
                <key>Debug</key>
                <dict>
                    <key>OTHER_LDFLAGS</key>
                    <string>-lCarbonEngineDebug</string>
                </dict>

                <key>Release</key>
                <dict>
                    <key>OTHER_LDFLAGS</key>
                    <string>-lCarbonEngine</string>
                </dict>
            </dict>

            <key>BuildPhases</key>
            <array>
                <dict>
                    <key>Class</key>
                    <string>Sources</string>
                </dict>
                <dict>
                    <key>Class</key>
                    <string>Resources</string>
                </dict>
                <dict>
                    <key>Class</key>
                    <string>Frameworks</string>
                </dict>
            </array>
        </dict>

        <!-- iOS target -->
        <dict>
            <key>Name</key>
            <string>___PACKAGENAME___ iOS</string>

            <key>ProductType</key>
            <string>com.apple.product-type.application</string>

            <key>SharedSettings</key>
            <dict>
                <key>SDKROOT</key>
                <string>iphoneos</string>
                <key>VALID_ARCHS</key>
                <array>
                    <string>arm64</string>
                    <string>armv7</string>
                </array>
                <key>CLANG_CXX_LIBRARY</key>
                <string>libc++</string>
                <key>CLANG_ENABLE_OBJC_ARC</key>
                <string>YES</string>
                <key>IPHONEOS_DEPLOYMENT_TARGET</key>
                <string>8.0</string>
                <key>CODE_SIGN_IDENTITY[sdk=iphoneos*]</key>
                <string>iPhone Developer</string>
                <key>PRODUCT_NAME</key>
                <string>___PACKAGENAME___</string>
                <key>INFOPLIST_FILE</key>
                <string>___PACKAGENAME___/Info-iOS.plist</string>
                <key>PRODUCT_BUNDLE_IDENTIFIER</key>
                <string>___VARIABLE_bundleIdentifierPrefix:bundleIdentifier___.___PACKAGENAMEASRFC1034IDENTIFIER___</string>

                <!-- Add search paths so the CarbonEngine headers and libraries can be found -->
                <key>HEADER_SEARCH_PATHS</key>
                <string>/Applications/Carbon\ SDK/Include</string>
                <key>LIBRARY_SEARCH_PATHS</key>
                <string>/Applications/Carbon\ SDK/Library</string>
            </dict>

            <key>Frameworks</key>
            <array>
                <string>CoreGraphics</string>
                <string>Foundation</string>
                <string>GameKit</string>
                <string>OpenAL</string>
                <string>OpenGLES</string>
                <string>QuartzCore</string>
                <string>StoreKit</string>
                <string>UIKit</string>
            </array>

            <key>Configurations</key>
            <dict>
                <key>Debug</key>
                <dict>
                    <key>OTHER_LDFLAGS</key>
                    <string>-lCarbonEngineiOSDebug</string>
                </dict>

                <key>Release</key>
                <dict>
                    <key>VALIDATE_PRODUCT</key>
                    <string>YES</string>
                    <key>OTHER_LDFLAGS</key>
                    <string>-lCarbonEngineiOS</string>
                </dict>
            </dict>

            <key>BuildPhases</key>
            <array>
                <dict>
                    <key>Class</key>
                    <string>Sources</string>
                </dict>
                <dict>
                    <key>Class</key>
                    <string>Resources</string>
                </dict>
                <dict>
                    <key>Class</key>
                    <string>Frameworks</string>
                </dict>
            </array>
        </dict>
    </array>


    <!-- Define the files that will be included in the project -->
    <key>Definitions</key>
    <dict>
        <key>___PACKAGENAME___.cpp</key>
        <dict>
            <key>Path</key>
            <string>___PACKAGENAME___.cpp</string>
        </dict>
        <key>___PACKAGENAME___.h</key>
        <dict>
            <key>Path</key>
            <string>___PACKAGENAME___.h</string>
        </dict>
        <key>Info.plist</key>
        <dict>
            <key>Path</key>
            <string>Info.plist</string>

            <!-- Ensure Info.plist doesn't get bundled in the .app -->
            <key>TargetIndices</key>
            <array/>
        </dict>
        <key>Info-iOS.plist</key>
        <dict>
            <key>Path</key>
            <string>Info-iOS.plist</string>

            <!-- Ensure Info-iOS.plist doesn't get bundled in the .app -->
            <key>TargetIndices</key>
            <array/>
        </dict>
    </dict>

    <!-- Pull the above definitions into the project tree -->
    <key>Nodes</key>
    <array>
        <string>___PACKAGENAME___.cpp</string>
        <string>___PACKAGENAME___.h</string>
        <string>Info.plist</string>
        <string>Info-iOS.plist</string>
    </array>
</dict>
</plist>
